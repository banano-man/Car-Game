#include <LiquidCrystal.h>

int result = 1, car1Pos = 4, car2Pos= 3, carRow = 0, c1Pos = 15, potPosition = 3;

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
//Иконка на играч
//Задна част
byte player1[8] = {
  B00000,
  B00000,
  B00111,
  B01001,
  B11111,
  B11111,
  B00110,
  B00000
};
//Предна част
byte player2[8] = {
  B00000,
  B00000,
  B11000,
  B00100,
  B11111,
  B11111,
  B00110,
  B0000
};

//Иконка кола
//Предна част
byte car1[8] = {
  B00000,
  B00000,
  B00011,
  B00100,
  B11111,
  B11111,
  B01100,
  B00000
};
//Задна част
byte car2[8] = {
  B00000,
  B00000,
  B11100,
  B10010,
  B11111,
  B11111,
  B01100,
  B00000
};

//Иконка мотор
//Предна част
byte bike1[8] = {
  B00000,
  B00000,
  B00001,
  B00010,
  B00110,
  B01101,
  B01100,
  B00000
};
//Задна част
byte bike2[8] = {
  B00000,
  B00000,
  B00000,
  B00110,
  B11100,
  B11011,
  B00011,
  B00000
};

//Иконка камион
//Предна част
byte truck1[8] = {
  B00000,
  B00010,
  B00110,
  B01010,
  B11110,
  B11111,
  B01100,
  B00000
};
//Задна част
byte truck2[8] = {
  B00000,
  B11111,
  B11111,
  B11111,
  B11111,
  B11111,
  B00110,
  B00000
};
const int boton=8;
void scroll(){
  lcd.scrollDisplayLeft();
}

int taken[40][2];

void setup()
{
  for(int i = 0; i <=39; i++)
  {
    taken[i][0] = 0; taken[i][1]=0;
  }
  lcd.begin(16,2);
    //Създаване на иконките
  lcd.createChar(1, player1);
  lcd.createChar(2, player2);
  lcd.createChar(3, car1);
  lcd.createChar(4, car2);
  lcd.createChar(5, bike1);
  lcd.createChar(6, bike2);
  lcd.createChar(7, truck1);
  lcd.createChar(8, truck2);
  
  Serial.begin(9600);
  pinMode(boton,INPUT);
}
void loop()
{
  if(result == 1){
    for(int q=2; q<random(7,12); q++){
      scroll();
      car();
      delay(300);
      if(c1Pos == 39) {c1Pos = 0;}
      else {c1Pos++;}

    if(taken[car1Pos][carRow] == 1){result =0; }
    if(taken[car2Pos][carRow] == 1){result=0;}
    }
  int type = random(0,3);
  
  int row = random(0,2);
    lcd.setCursor(c1Pos,row);
   lcd.write(3+type*2);
  int c2Pos = 0;
  if(c1Pos==39) {c2Pos = 0;}
  else {c2Pos = c1Pos + 1;}
  lcd.setCursor(c2Pos, row);
  lcd.write(3+type*2+1);
  
  taken[c1Pos][row] = 1;
  taken[c2Pos][row] = 1;
  
  }
  else {lcd.clear();lcd.setCursor(0,0); lcd.print("F");}
}
void car(){
  potPosition = analogRead(A0);
  if(potPosition <=500){
    lcd.setCursor(car2Pos,0);
    lcd.write(1);
    if(car2Pos==39) {car1Pos = 0;}
  else {car1Pos = car2Pos + 1;}
    lcd.setCursor(car2Pos+1,0);
    lcd.write(2);
    carRow = 0;
  }
  else{
    lcd.setCursor(car2Pos,1);
    lcd.write(1);
    if(car2Pos==39) {car1Pos = 0;}
  else {car1Pos = car2Pos + 1;}
    lcd.setCursor(car1Pos,1);
    lcd.write(2);
    carRow = 1;
  }
  if(car2Pos==0){lcd.setCursor(39,0); lcd.print(" "); 
                lcd.setCursor(39,1); lcd.print(" ");
                taken[39][0]=0; taken[39][1] =0;}
    else {lcd.setCursor(car2Pos-1,0); lcd.print(" ");
         lcd.setCursor(car2Pos-1,1); lcd.print(" ");
         taken[car2Pos-1][0]=0;taken[car2Pos-1][1]=0;}
  if(car2Pos == 39) {car2Pos = 0;}
  else car2Pos++;
}
