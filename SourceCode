#include <LiquidCrystal.h>

int level = 0, result = 1, car1Pos = 4, car2Pos= 3, carRow = 0, c1Pos = 15, potPosition = 3;
LiquidCrystal lcd(12, 11, 5, 4, 3, 2);
int gameStarted = 0;
const int buttonPin = 8;
int taken[40][2];
//Стрелка
byte ch[8]={B00000, B00010, 
              B00110, B01110, 
              B01110, B00110,
              B00010, B00000};
//Иконка на играч
//Задна част
byte player1[8] = {
  B00000,
  B00000,
  B00111,
  B01001,
  B11111,
  B11111,
  B00110,
  B00000
};
//Предна част
byte player2[8] = {
  B00000,
  B00000,
  B11000,
  B00100,
  B11111,
  B11111,
  B00110,
  B0000
};

//Иконка кола
//Предна част
byte car1[8] = {
  B00000,
  B00000,
  B00011,
  B00100,
  B11111,
  B11111,
  B01100,
  B00000
};
//Задна част
byte car2[8] = {
  B00000,
  B00000,
  B11100,
  B10010,
  B11111,
  B11111,
  B01100,
  B00000
};

//Иконка мотор
//Предна част
byte bike1[8] = {
  B00000,
  B00000,
  B00001,
  B00010,
  B00110,
  B01101,
  B01100,
  B00000
};
//Задна част
byte bike2[8] = {
  B00000,
  B00000,
  B00000,
  B00110,
  B11100,
  B11011,
  B00011,
  B00000
};

//Иконка камион
//Предна част
byte truck1[8] = {
  B00000,
  B00010,
  B00110,
  B01010,
  B11110,
  B11111,
  B01100,
  B00000
};
//Задна част
byte truck2[8] = {
  B00000,
  B11111,
  B11111,
  B11111,
  B11111,
  B11111,
  B00110,
  B00000
};

void setup() {
  lcd.begin(16, 2);
   for(int i = 0; i <=39; i++)
  {
    taken[i][0] = 0; taken[i][1]=0;
  }

  //Създаване на иконките
  lcd.createChar(1, player1);
  lcd.createChar(2, player2);
  lcd.createChar(3, car1);
  lcd.createChar(4, car2);
  lcd.createChar(5, bike1);
  lcd.createChar(6, bike2);
  lcd.createChar(7, truck1);
  lcd.createChar(8, truck2);
  
  Serial.begin(9600);
  pinMode(buttonPin, INPUT);
}

void loop() {
  if(gameStarted == 0) {begin();}
  else if (level == 1) {level1();}
  else if(level ==2) {level2();}
  else if(level == 3) {level3();}
  else if(potPosition >=683) {level1();}
  else if(potPosition >=342) {level2();}
  else {level3();}
}
//Начален екран за избиране на ниво
void begin()
{
  lcd.clear();
  lcd.setCursor(1,0);
  lcd.print("Choose a level");
  while(digitalRead(buttonPin) == HIGH){
  potPosition = analogRead(A0);
  //potPosition = map(potPosition, 0, 1023, 1, 3);
  lcd.setCursor(6, 1);
  lcd.print("1 2 3");
  delay(500);
  if(potPosition>=683)
  {
    lcd.setCursor(6, 1);
    lcd.print(" ");
  }
  else if(potPosition>=342)
  {
	lcd.setCursor(8, 1);
    lcd.print(" ");
  }
  else
  {
    lcd.setCursor(10, 1);
    lcd.print(" ");
  }
  delay(500);
  }
  gameStarted = 1;
}
//Загуба
void lost()
{
  
  delay(1000);
  lcd.clear();
  lcd.setCursor(4,0);
  lcd.print("You lost!"); 
  while(digitalRead(buttonPin) == HIGH)
  {
    lcd.setCursor(1,1);
    lcd.print("[press button]");
    delay(500);
    lcd.setCursor(1,1);
    lcd.print("              ");
    delay(500);
  }
  choice();
}
//Победа
void won()
{
  delay(1000);
  lcd.clear();
  lcd.setCursor(4,0);
  lcd.print("You won!"); 
  while(digitalRead(buttonPin) == HIGH)
  {
    lcd.setCursor(1,1);
    lcd.print("[press button]");
    delay(500);
    lcd.setCursor(1,1);
    lcd.print("              ");
    delay(500);
  }
  choice();
}
//Рестарт или друго ниво
void choice()
{
  car1Pos = 4, car2Pos= 3, carRow = 0, c1Pos = 15;
  result = 1;
    for(int i = 0; i <=39; i++)
  {
    taken[i][0] = 0; taken[i][1]=0;
  }
  lcd.createChar(1, ch);
  delay(1000);
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("restart");
  lcd.setCursor(0,1);
  lcd.print("return");
  while(digitalRead(buttonPin)==HIGH)
  {
    potPosition = analogRead(A0);
    //potPosition = map(potPosition, 0, 1023, 1, 2);
    if(potPosition <512)
    {
      lcd.setCursor(15,0);
      lcd.write(1);
      lcd.setCursor(0,0);
      lcd.print("             ");
      delay(500);
      lcd.setCursor(0,0);
      lcd.print("restart");
      delay(500);
    }
    else
    {
      level = 0;
      gameStarted = 0;
      lcd.setCursor(15,1);
      lcd.write(1);
      lcd.setCursor(0,1);
      lcd.print("              ");
      delay(500);
      lcd.setCursor(0,1);
      lcd.print("return");
      delay(500); 
    }
    lcd.setCursor(15,0);
    lcd.print(" ");
    lcd.setCursor(15,1);
    lcd.print(" ");
  }
  lcd.createChar(1, player1);
  delay(1000);
}
void scroll(){
  lcd.scrollDisplayLeft();
}
//Първо ниво
void level1()
{
  lcd.clear();
  while(result == 1){
    int finish = 0;
    for(int q=2; q<random(7,12); q++){
      scroll();
      car();
      finish++;
      delay(400);
      if(c1Pos == 39) {c1Pos = 0;}
      else {c1Pos++;}

    if(taken[car1Pos][carRow] == 1){result =0; }
    if(taken[car2Pos][carRow] == 1){result=0;}
    }
  int type = random(0,15);
  
  int row = random(0,10);
    if(row<5){row=0;}
    else{row=1;}
    lcd.setCursor(c1Pos,row);
    if(type<5) {type = 0;}
    else if(type<10) {type=1;}
    else {type = 2;}
   lcd.write(3+type*2);
  int c2Pos = 0;
  if(c1Pos==39) {c2Pos = 0;}
  else {c2Pos = c1Pos + 1;}
  lcd.setCursor(c2Pos, row);
  lcd.write(3+type*2+1);
  
  taken[c1Pos][row] = 1;
  taken[c2Pos][row] = 1;
    if(finish==20){break;}
  }
  delay(300);
  lcd.createChar(8, finish);
  for(int a=0; a<10; a++){scroll();}
  //
  won();
  lcd.createChar(8, truck2);
  level = 1;
  lost();
}
//Второ ниво
void level2()
{
  lcd.clear();
  while(result == 1){
    for(int q=2; q<random(7,12); q++){
      scroll();
      car();
      delay(300);
      if(c1Pos == 39) {c1Pos = 0;}
      else {c1Pos++;}

    if(taken[car1Pos][carRow] == 1){result =0; }
    if(taken[car2Pos][carRow] == 1){result=0;}
    }
  int type = random(15,45);
  
  int row = random(10,20);
    if(row<15){row=0;}
    else{row=1;}
    lcd.setCursor(c1Pos,row);
    if(type<25) {type = 0;}
    else if(type<35) {type=1;}
    else {type = 2;}
   lcd.write(3+type*2);
  int c2Pos = 0;
  if(c1Pos==39) {c2Pos = 0;}
  else {c2Pos = c1Pos + 1;}
  lcd.setCursor(c2Pos, row);
  lcd.write(3+type*2+1);
  
  taken[c1Pos][row] = 1;
  taken[c2Pos][row] = 1;
  }
  level = 2;
  lost();
}
//Трето ниво
void level3()
{
  lcd.clear();
  while(result == 1){
    for(int q=2; q<random(7,12); q++){
      scroll();
      car();
      delay(300);
      if(c1Pos == 39) {c1Pos = 0;}
      else {c1Pos++;}

    if(taken[car1Pos][carRow] == 1){result =0; }
    if(taken[car2Pos][carRow] == 1){result=0;}
    }
  int type = random(30,45);
  
  int row = random(20,30);
    if(row<25){row=0;}
    else{row=1;}
    lcd.setCursor(c1Pos,row);
    if(type<35) {type = 0;}
    else if(type<40) {type=1;}
    else {type = 2;}
   lcd.write(3+type*2);
  int c2Pos = 0;
  if(c1Pos==39) {c2Pos = 0;}
  else {c2Pos = c1Pos + 1;}
  lcd.setCursor(c2Pos, row);
  lcd.write(3+type*2+1);
  
  taken[c1Pos][row] = 1;
  taken[c2Pos][row] = 1;
  }
  level = 3;
  lost();
}
void car(){
  potPosition = analogRead(A0);
  if(potPosition <=500){
    lcd.setCursor(car2Pos,0);
    lcd.write(1);
    if(car2Pos==39) {car1Pos = 0;}
  else {car1Pos = car2Pos + 1;}
    lcd.setCursor(car2Pos+1,0);
    lcd.write(2);
    carRow = 0;
  }
  else{
    lcd.setCursor(car2Pos,1);
    lcd.write(1);
    if(car2Pos==39) {car1Pos = 0;}
  else {car1Pos = car2Pos + 1;}
    lcd.setCursor(car1Pos,1);
    lcd.write(2);
    carRow = 1;
  }
  if(car2Pos==0){lcd.setCursor(39,0); lcd.print(" "); 
                lcd.setCursor(39,1); lcd.print(" ");
                taken[39][0]=0; taken[39][1] =0;}
    else {lcd.setCursor(car2Pos-1,0); lcd.print(" ");
         lcd.setCursor(car2Pos-1,1); lcd.print(" ");
         taken[car2Pos-1][0]=0;taken[car2Pos-1][1]=0;}
  if(car2Pos == 39) {car2Pos = 0;}
  else car2Pos++;
}

